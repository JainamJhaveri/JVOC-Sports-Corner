<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rishabhjain.jvocsportscorner.AddSubEvent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include 
            android:id="@+id/toolbarlayout"
            layout="@layout/toolbarlayout" />

        <!--T.T Single Senior Male-->

        <LinearLayout
            android:layout_below="@+id/toolbarlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_grey"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Game"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/gameSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_grey"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Team of"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/teamOfSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_grey"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Age group"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:weightSum="10">

                <CheckBox
                    android:id="@+id/CB_age_senior"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:checked="true"
                    android:clickable="true"
                    android:text="Seniors"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/CB_age_junior"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:checked="true"
                    android:clickable="true"
                    android:text="Juniors"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_grey"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Gender"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp">

                <RadioGroup
                    android:id="@+id/RG_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <RadioButton
                        android:id="@+id/Radio_openForBoth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Open for Both"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/Radio_exclusive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exclusive for"
                        android:textSize="18sp" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/CB_gender_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:text="Males"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/CB_gender_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:text="Females"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/blue"
                android:onClick="subEventDoneClicked"
                android:text="Done"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>